<mvc:View
	controllerName="sap.ui.core.tutorial.odatav4.controller.Startpage"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:layout="sap.ui.layout">
	<Page title="{i18n>title}">
		<layout:VerticalLayout class="sapUiResponsiveMargin">
			<Title
				titleStyle="H2"
				text="{i18n>startpageTilesGroupTitle}"
				class="sapUiTinyMarginBegin"/>
			<layout:HorizontalLayout allowWrapping="true">
				<GenericTile class="sapUiSmallMargin" 
				header="{i18n>startpagePFTileTitle}" subheader="{i18n>startpagePFTileSubTitle}">
					<TileContent>
						<content>
							<NumericContent 
								scale="%" 
								value="{
										path: 'process>/Nodes',
										formatter: '.getProgress'
									}"
								icon="sap-icon://factory"	
							>
							</NumericContent>
						</content>
					</TileContent>
				</GenericTile>
				<GenericTile class="sapUiSmallMargin" header="{i18n>startpageUserReviewsTileTitle}">
					<TileContent>
						<content>
							<NumericContent 
								value="{
											path: 'review>UserReviews',
											formatter: '.getEntityCount'
										}"
								indicator="None"
								valuecolor="Neutral"						
							/>
						</content>
					</TileContent>
				</GenericTile>
			</layout:HorizontalLayout>
		</layout:VerticalLayout>
	</Page>
</mvc:View>
